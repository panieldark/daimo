{
  "private": true,
  "name": "@daimo/monorepo",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "turbo dev",
    "start": "turbo start",
    "build": "turbo build",
    "build:api": "turbo run build --filter @daimo/api",
    "build:mobile": "turbo run build --filter @daimo/mobile",
    "test": "turbo test",
    "lint": "turbo lint && syncpack list-mismatches",
    "codegen": "turbo codegen",
    "fix:deps": "syncpack fix-mismatches"
  },
  "dependencies": {
    "@semaphore-protocol/identity": "^3.15.0",
    "eslint-config-universe": "^11.3.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^2.8.8",
    "syncpack": "^10.6.1",
    "turbo": "^1.10.15",
    "typescript": "5.2.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "overrides": {
    "react-native": "0.73.4",
    "@types/react-native": "0.73.0"
  },
  "engines": {
    "node": ">=20.3.0",
    "npm": ">=9.6.7"
  }
}
